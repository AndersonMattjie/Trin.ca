@model Churras.ViewModels.ChurrasDetalhesViewModel
@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes do Churras</h2>

<div class="form-group">
    @Html.LabelFor(m => m.Churras.DateTime.ToString("dd/MM/yyyy"), "Quando?")
    @Html.TextBoxFor(m => m.Churras.DateTime, new { @class = "form-control",@readonly="readonly"})
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Churras.Descricao, "Descrição")
    @Html.TextBoxFor(m => m.Churras.Descricao, new { @class = "form-control", @readonly = "readonly" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Churras.Obs)
    @Html.TextAreaFor(m => m.Churras.Obs, new { @class = "form-control",@readonly="readonly" })
</div>
<div class="label label-warning label lb-md">Quantos Pila Por Pessoa:</div>
<div class="form-group">
    @Html.LabelFor(m => m.Churras.ValorComBebida, "Valor COM bebida")
    @Html.TextBoxFor(m => m.Churras.ValorComBebida, new { @class = "form-control", @readonly = "readonly" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Churras.ValorSemBebida, "Valor SEM bebida")
    @Html.TextBoxFor(m => m.Churras.ValorSemBebida, new { @class = "form-control", @readonly = "readonly" })
</div>

<div class="label label-warning label lb-md">Resumo:</div>
<div class="form-group">
    @Html.Label("Número de Participantes: " + Model.TotalParticipantes.ToString())
</div>
<div class="form-group">
    @Html.Label("Valor a ser Arrecadado: " + Model.ValorASerArrecadado.ToString())
</div>
<div class="form-group">
    @Html.Label("Valor Pago: " + Model.ValorJaPago.ToString())
</div>
<div class="form-group">
    @Html.Label("Total de Bebuns: " + Model.TotalBebuns.ToString())
</div>
<div class="form-group">
    @Html.Label("Total de Saudáveis: " + Model.TotalSaudaveis.ToString())
</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
