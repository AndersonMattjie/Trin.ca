@model Churras.ViewModels.ChurrascoFormViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Cadastrar Churrasco</h2>

@using (Html.BeginForm("Create", "Churrascos"))
{

    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Date, "Quando?")
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", autofocus = "autofocus", placeholder = "eg: 01/01/2017" })
        @Html.ValidationMessageFor(m => m.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Descricao, "Descrição")
        @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Descricao)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Obs)
        @Html.TextAreaFor(m => m.Obs, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Obs)
    </div>
    <div class="label label-warning label lb-md">Valor de contribuição <strong>sugerido</strong>:</div>
    <div class="form-group">
        @Html.LabelFor(m => m.ValorComBebida, "Valor COM bebida")
        @Html.TextBoxFor(m => m.ValorComBebida, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ValorComBebida)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ValorSemBebida, "Valor SEM bebida")
        @Html.TextBoxFor(m => m.ValorSemBebida, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ValorSemBebida)
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Save</button>  
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}